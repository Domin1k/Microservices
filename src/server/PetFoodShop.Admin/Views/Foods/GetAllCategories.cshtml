@model IEnumerable<AllFoodCategoriesModel>
    <h2>Categories</h2>
<table class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">#</th>
            <th scope="col">#</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <th scope="row">@item.Id</th>
            <td>@item.Name</td>
            <td>
                <a asp-area="" asp-controller="Foods" asp-action="GetCategoryBrands" asp-route-id="@item.Id" class="btn btn-primary">Show brands</a>
            </td>
            <td>
                <a asp-area="" asp-controller="Foods" asp-action="Create" asp-route-id="@item.Id" class="btn btn-primary">Create Brand</a>
            </td>
        </tr>
        }
    </tbody>
</table>
